{% extends 'Front/front_base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-6 offset-3">
                <div class="border-2 border-dark rounded-3">
                    <script src="https://js.stripe.com/v3/"></script>
                    <form id="payment-form" data-stripe-payment="{{ intent.client_secret }}" data-redirect-url="{{ redirectPaymentUrl }}" data-user-mail="{{ app.getUser.email }}">
                        <div id="card-element">
                            <!--Stripe.js injects the Payment Element-->
                        </div>
                        <div id="card-errors" role="alert"></div>
                        <button id="submit">
                            <div class="spinner hidden" id="spinner"></div>
                            <span id="button-text">Pay now</span>
                        </button>
                        <div id="payment-message" class="hidden"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}