{% extends 'Admin/admin_base.html.twig' %}

{% block title %}Hello AlbumController!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row gy-3">
            <div class="col-12">
                <h1>Tous les albums</h1>
            </div>
            <div class="col-12">
                <table class="table table-dark table-hover table-striped text-center">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Titre</th>
                            <th>Label</th>
                            <th>Nb Tracks</th>
                            <th>Duration</th>
                            <th>Release</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for album in pagination %}
                        <tr>
                            <td>
                                <img src="{{ album.smallCover }}" alt="Photo de {{ album.title }}">
                            </td>
                            <td>{{ album.title }}</td>
                            <td>{{ album.label }}</td>
                            <td>{{ album.nbTracks }}</td>
                            <td>{{ album.duration }}</td>
                            <td>{{ album.releaseAt|date('d-m-Y') }}</td>
                            <td>
                                <a href="" class="btn btn-primary">Details</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="col-12 d-flex justify-content-center">
                    <div class="pagination">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
